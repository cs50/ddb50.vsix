{
    "name": "ddb50",
    "displayName": "CS50 Duck",
    "description": "Provide everyone with their own virtual duck in VS Code. Introduce students to rubber duck debugging, a technique that involves talking to a rubber duck (or any inanimate, or even animate object) about a bug in their code. Now, with the power of OpenAI's ChatGPT, your rubber duck can talk back!",
    "icon": "images/ddb50.png",
    "version": "2.0.0",
    "publisher": "CS50",
    "repository": "https://github.com/cs50/ddb50.vsix",
    "engines": {
        "vscode": "^1.83.1"
    },
    "categories": [
        "Education"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ddb50.resetHistory",
                "title": "Clear Messages",
                "icon": "$(extensions-refresh)"
            },
            {
                "command": "ddb50.helpWithTerminal",
                "title": "Help with Terminal",
                "icon": "resources/ddb-yellow.svg"
            },
            {
                "command": "ddb50.enableTerminalDuck",
                "title": "Enable CS50 Duck in Terminal"
            },
            {
                "command": "ddb50.disableTerminalDuck",
                "title": "Disable CS50 Duck in Terminal"
            }
        ],
        "configuration": [
            {
                "title": "Config Override",
                "properties": {
                    "ddb50.config": {
                        "type": "string",
                        "description": "Override default prompts configuration."
                    }
                }
            }
        ],
        "views": {
            "ddb50": [
                {
                    "id": "ddb50.chatWindow",
                    "name": "CS50 Duck Debugger",
                    "type": "webview"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "ddb50",
                    "title": "CS50 Duck Debugger",
                    "icon": "resources/ddb.svg"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "ddb50.resetHistory",
                    "group": "navigation",
                    "when": "view == ddb50.chatWindow"
                },
                {
                    "command": "ddb50.helpWithTerminal",
                    "group": "navigation@-1",
                    "when": "view == terminal && ddb50:didActivateTerminalDuck"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.3",
        "@types/node": "20.x",
        "@types/vscode": "^1.83.1",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "eslint": "^8.52.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "typescript": "^5.2.2",
        "vscode-test": "^1.5.2"
    },
    "dependencies": {
        "axios": "^1.5.1",
        "markdown-it": "^13.0.2",
        "markdown-it-highlightjs": "^4.0.1",
        "uuid": "^9.0.1"
    }
}
